<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Cabecera">
        <item name="android:background">@drawable/trama</item>
        <item name="android:layout_height">@dimen/altocabecera</item>
    </style>

    <style name="botonesIzquierda">
        <item name="android:background">@color/colorRelleno</item>
        <item name="android:layout_width">@dimen/anchoboton</item>
        <item name="android:layout_height">@dimen/alturaboton</item>
        <item name="android:layout_marginTop">@dimen/izquierda </item>
        <item name="android:text">@string/botonIzquierda</item>
        <item name="android:layout_margin"></item>
    </style>

</resources>
